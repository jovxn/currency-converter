{
    "manifest_version": 3,
    "name": "Currency Converter",
    "version": "1.1.0",
    "description": "Highlight currency text on any webpage and convert it instantly.",
    "permissions": ["activeTab", "scripting", "storage"],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Convert Currency"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/constants.js", "js/parser.js", "js/panel.js", "js/main.js"]
    }],
    "web_accessible_resources": [{
        "resources": ["styles/panel.css"],
        "matches": ["<all_urls>"]
    }],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            },
            "description": "Open currency converter"
        }
    }
}
